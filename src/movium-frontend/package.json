    "react-icons": "^4.3.1",
    "react-simple-image-slider": "^2.3.0",
    "remix": "^1.1.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-slick": "^0.23.8",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.13",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
